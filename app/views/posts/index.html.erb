<div class="col-sm-6 col-sm-offset-3">
	<% @posts.each do |p| %>
	<div class="white-border">
		<%= image_tag p.image.url(:medium) %>
		<br>
		<div class="username">
			<ul class="show-posts">
				<li><%#= link_to p.user.username, user_posts_path(:id) %></li>
			</ul>
		</div>
		<div class="description">
			<%= p.description %>
		</div>
	</div>
	<% end %>
	
</div>
