<div class="col-sm-6 col-sm-offset-3">
	<% @posts.each do |p| %>
	<div class="white-border">
			<% if p.user == current_user %>
				<div class="dropdown">
  				<button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    			...
    			<!-- <span class="caret"></span> -->
  				</button>
  				<ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
				    <li><%= link_to 'Delete', post_path(:id), method: :delete, data: { confirm: "Are you sure?"} %></li>
				    <li><%= link_to 'Edit', edit_post_path(:id) %></li>
  				</ul>
				</div>
		<% end %>
		<%= image_tag p.image.url(:medium) %>
		<br>
		<div class="username">
			<ul class="show-posts">
				<li><%= p.user.username %></li>
			</ul>
		</div>
		<div class="description">
			<%= p.description %>
		</div>
		<div class="btn-group">
      <%= link_to like_post_path(p), method: :put, class: "btn btn-default btn-sm" do %>
        <span class="glyphicon glyphicon-heart">
        Like</span>
        <%= p.get_upvotes.size %>
      <% end %>
    </div>
	</div>
	<% end %>
	
</div>